<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tear_background">

    <RelativeLayout
        android:id="@+id/rl_tear_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:visibility="invisible">

        <RelativeLayout
            android:id="@+id/rl_tear_restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_tear_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_keyboard_arrow_left_white_36dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_tear_return"
                android:layout_centerVertical="true"
                android:text="다시 도전하기"
                android:textStyle="bold"
                android:textSize="15dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_tear_achieve_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/tv_tear_achieve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="도전과제"
                android:layout_marginRight="10dp"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/iv_tear_achieve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_tear_achieve"
                android:background="@drawable/ic_videogame_asset_white_36dp"
                android:padding="5dp"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_tear_tear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tv_tear_tear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_tear_tear"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/tv_tear_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_tear_tear"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/ll_tear_kakao_container"
            android:layout_marginBottom="30dp"
            android:textSize="16dp"
            android:text="falinrush@daum.net 으로 문제를 출제 해주세요!\n배틀태그도 같이 올려드립니다."/>

        <LinearLayout
            android:id="@+id/ll_tear_kakao_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_centerHorizontal="true"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="실력을 친구에게 자랑해보세요!"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/kakaolink_btn_medium"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>

